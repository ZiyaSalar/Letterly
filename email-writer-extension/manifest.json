{
    "name": "Letterly",
    "description": "AI Powered Email Reply Generator",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["storage", "activeTab"],
    "host_permissions": [
        "http://localhost:8080/*",
        "*://mail.google.com/*"
    ],
    "content_scripts": [
        {
            "js": ["content.js"],
            "css": ["content.css"],
            "matches": ["*://mail.google.com/*"],
            "run_at" : "document_end"
        }
    ],
    "web_accessible_resources": [
    {
        "resources": [ "icon/*" ],
        "matches": [ "*://mail.google.com/*" ]
    }
    ],
    "action": {
        "default_title": "Email Writer Extension",
        "default_icon": "Letterly_icon.png"
    }
}
